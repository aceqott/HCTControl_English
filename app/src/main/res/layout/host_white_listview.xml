<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/AppTheme"
    android:background="?attr/nav_drawer_bg_color">
    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
    <TextView android:textSize="12dp"
        android:layout_width="match_parent"
        android:id="@+id/textViewIntro"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/hfm_text_domain"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp" />
    <TextView android:textSize="12dp"
        android:layout_width="match_parent"
        android:id="@+id/textViewIntro2"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/hfm_text2_domain"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDominio"
        android:layout_gravity="center_horizontal"
        android:hint="ihatepops.com    &lt;- EXAMPLE"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/buttonAdd"
            style="@style/AppTheme"
            android:text="ADD TO\nLIST"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="?attr/colorAccent"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:id="@+id/buttonDelete"
            style="@style/AppTheme"
            android:text="DELETE LIST\nWHITE"
            android:layout_below="@+id/buttonAdd"
            android:background="?attr/colorAccent"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/buttonAplicar"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp" />

        <Button
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:id="@+id/buttonAplicar"
            android:text="APPLY LIST\nWHITE"
            android:layout_below="@+id/buttonAdd"
            android:background="?attr/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false">
    </ListView>

</LinearLayout>