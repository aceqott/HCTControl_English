<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡¡ NOTICE !!"
        style="@style/AppTheme"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        fontPath="fonts/MilasianCircaBoldPERSONAL.ttf"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aviso_backup"
        android:id="@+id/textAvisoBackup"
        style="@style/AppTheme"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxAvisoBackup"
        android:checked="false"
        android:layout_below="@+id/textAvisoBackup"
        android:layout_marginTop="10dp"
        android:text="I never want to see this message."
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>